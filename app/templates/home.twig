{% extends "base.twig" %}
{% block content %}
<div class="index-intro">
	{{ data.intro|raw }}
	<div style="clear: both;"></div>
</div>
<div class="ongoing-exp">
	<p><span class="title">Ongoing experiment:</span> <a href="{{ path_for('post', {slug : data.experiment.slug}) }}">{{ data.experiment.title }}</a> (<em><a href="{{ path_for('post', {slug : 'Experiments'}) }}">all</a></em>) | <span class="title">Theorem of the day: (fr)</span> <a href="{{ path_for('post', {slug : data.theorem.slug}) }}">{{ data.theorem.title }}</a> (<em><a href="{{ path_for('post', {slug : 'Théorèmes'}) }}">all</a></em>)</p>
</div>
<div class="legend_marker grid noMobile">
	<div class="col-1-3 legend">
		<span>Legend.</span>
		Level of knowledge required.
	</div>
	<div class="col-2-3 markers squares">
		<span class="one"><i></i> trivial</span>
		<span class="two"><i></i> technical</span>
		<span class="three"><i></i> theoretical</span>
		<span class="four"><i></i> academic</span>
	</div>
</div>
<div class="home-articles">
	<div class="row">
		<div class="column x_3_5" id="recent-posts">
			<h5>Recent posts</h5>
			<ul class="roll">
				{% for post in data.posts %}
				<li><span class="squares"><span class="{% if post.meta.difficulty is not empty %}{% if post.meta.difficulty == '1' %}one{% elseif post.meta.difficulty == '2' %}two{% elseif post.meta.difficulty == '3' %}three{% elseif post.meta.difficulty == '4' %}four{% endif %}{% endif %}"><i></i></span></span><a href="{{ path_for('post', {slug : post.meta.slug}) }}">{{ post.meta.title }}</a><time>{{ data.post.meta.published|date('M j') }}</time></li>
				{% endfor %}
			</ul>
			<div style="clear: both;"></div>
	  	</div>
  		<div class="column x_2_5" id="last-updated-topics">
  			<h5>Last updates</h5>
  			<p>{{ data.topics|raw }}</p>
  		</div>
  	</div>
</div>
{% endblock %}
{% block pagination %}
{{ pagination }}
{% endblock %}