{% extends 'editor/layout.twig' %}

{% block main %}
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <div class="panel panel-default">
            <div class="panel-heading">Change password</div>
            <div class="panel-body">
                <form class="" action="{{ path_for('editor.password.change') }}" method="post" autocomplete="off">
                    <div class="form-group{{ form_errors.current_password ? ' has-error' : '' }}">
                        <label for="current_password">Current Password</label>
                        <input type="password" name="current_password" value="{{ old_form_data.current_password }}">
                        {% if form_errors %}
                        <span class="help-block">{{ form_errors.current_password | first }}</span>
                        {% endif %}
                    </div>
                    <div class="form-group{{ form_errors.password ? ' has-error' : '' }}">
                        <label for="password">New Password</label>
                        <input type="password" name="password" value="{{ old_form_data.password }}">
                        {% if form_errors %}
                        <span class="help-block">{{ form_errors.password | first }}</span>
                        {% endif %}
                    </div>
                    <button type="submit" class="btn btn-default">Change password</button>

                    {{ csrf.field | raw }}
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}